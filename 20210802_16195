#점화식
p= [[0]*1001 for i in range(1001)]
p[1][1] = 1
p[2][1] = 1
p[2][2] = 1
p[3][1] = 1
p[3][2] = 2
p[3][3] = 1
mod = 10**9+9
for i in range(4,1001):
  for j in range(1,i+1):
    p[i][j] = (p[i-1][j-1] + p[i-2][j-1] + p[i-3][j-1]) % mod

#입력
t = int(input())
for i in range(t):
  n,m = map(int, input().split())
  
  #출력
  s = 0
  for i in range(1,m+1):
    s += p[n][i]
  print(s % mod)
